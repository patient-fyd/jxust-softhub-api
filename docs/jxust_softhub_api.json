            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "startTime": { "type": "string", "format": "date-time" },
                  "endTime": { "type": "string", "format": "date-time" },
                  "location": { "type": "string" },
                  "maxParticipants": { "type": "integer" },
                  "status": { "type": "integer" }
                },
                "required": ["title", "description", "startTime", "endTime", "location"]
              },
              "example": {
                "title": "编程大赛",
                "description": "年度编程大赛报名中",
                "startTime": "2025-05-01T09:00:00Z",
                "endTime": "2025-05-01T17:00:00Z",
                "location": "学校礼堂",
                "maxParticipants": 100,
                "status": 0
