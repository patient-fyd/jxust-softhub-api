{
  "openapi": "3.0.0",
  "info": {
    "title": "JXUST SoftHub API",
    "version": "1.0.0",
    "description": "API endpoints for JXUST SoftHub (官网、后台管理系统) 统一接口文档。"
  },
  "servers": [
    {
      "url": "http://localhost:9000",
      "description": "Local Server"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "用户注册",
        "description": "注册新用户，提交用户名、密码、姓名、邮箱、电话。",
        "requestBody": {
          "description": "用户注册信息",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegisterRequest"
              },
              "example": {
                "userName": "exampleUser",
                "password": "examplePwd",
                "name": "张三",
                "email": "zhangsan@example.com",
                "phone": "13800138000"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "注册成功返回用户信息",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                },
                "example": {
                  "code": 0,
                  "msg": "success",
                  "data": {
                    "userId": 1,
                    "userName": "exampleUser",
                    "createTime": "2025-04-02T12:00:00Z"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "用户登录",
        "description": "用户登录接口，返回 JWT Token 与用户信息。",
        "requestBody": {
          "description": "登录请求参数",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLoginRequest"
              },
              "example": {
                "userName": "exampleUser",
                "password": "examplePwd"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功返回 Token 与用户数据",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                },
                "example": {
                  "code": 0,
                  "msg": "success",
                  "data": {
                    "token": "jwt.token.here",
                    "user": {
                      "userId": 1,
                      "userName": "exampleUser",
                      "name": "张三"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/refresh": {
      "post": {
        "summary": "刷新 Token",
        "description": "根据旧 token 刷新新的 JWT token。",
        "requestBody": {
          "description": "旧 token",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string"
                  }
                },
                "required": ["token"]
              },
              "example": {
                "token": "old.jwt.token"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "刷新成功返回新的 token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                },
                "example": {
                  "code": 0,
                  "msg": "success",
                  "data": {
                    "token": "new.jwt.token"
                  }
                }
              }
            }
          }
        }
      }
    },
