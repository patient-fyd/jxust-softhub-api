{
  "openapi": "3.0.0",
  "info": {
    "title": "JXUST SoftHub API",
    "version": "1.0.0",
    "description": "JXUST SoftHub 前台与后台管理系统接口文档，所有接口遵循 RESTful 风格，返回格式统一为 { code, message, traceid, data }。支持 JWT 鉴权与权限校验。"
  },
  "servers": [
    {
      "url": "http://localhost:9000",
      "description": "本地开发环境"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "description": "业务状态码，0 表示成功，其它值表示错误"
          },
          "message": {
            "type": "string",
            "description": "返回信息描述"
          },
          "traceid": {
            "type": "string",
            "description": "请求追踪 ID"
          },
          "data": {
            "type": "object",
            "description": "返回数据，具体结构视接口而定"
          }
        }
      },
      "UserRegisterRequest": {
        "type": "object",
        "properties": {
          "userName": { "type": "string", "description": "用户名" },
          "password": { "type": "string", "description": "用户密码" },
          "name": { "type": "string", "description": "真实姓名" },
          "email": { "type": "string", "description": "电子邮箱" },
          "phone": { "type": "string", "description": "联系电话" }
        },
        "required": ["userName", "password", "name", "email", "phone"]
      },
      "UserLoginRequest": {
        "type": "object",
        "properties": {
          "userName": { "type": "string", "description": "用户名" },
          "password": { "type": "string", "description": "用户密码" }
        },
        "required": ["userName", "password"]
      },
      "UserInfo": {
        "type": "object",
        "properties": {
          "userId": { "type": "integer", "description": "用户ID" },
          "userName": { "type": "string", "description": "用户名" },
          "name": { "type": "string", "description": "真实姓名" },
          "roleId": { "type": "integer", "description": "用户角色ID" }
        }
      },
      "ApplyJoinRequest": {
        "type": "object",
        "properties": {
          "introduction": {
            "type": "string",
            "description": "入会申请说明"
          },
          "department": {
            "type": "string",
            "description": "申请加入的部门，如技术部、设计部等"
          }
        },
        "required": ["introduction", "department"]
      },
      "AssignRoleRequest": {
        "type": "object",
        "properties": {
          "roleId": {
            "type": "integer",
            "description": "分配给用户的新角色ID"
          }
        },
        "required": ["roleId"]
      },
      "NewsItem": {
        "type": "object",
        "properties": {
          "newsId": { "type": "integer", "description": "新闻ID" },
          "title": { "type": "string", "description": "新闻标题" },
          "content": { "type": "string", "description": "新闻内容" },
          "category": { "type": "string", "description": "新闻分类" },
          "coverImage": { "type": "string", "description": "封面图片 URL" },
          "createTime": { "type": "string", "format": "date-time", "description": "创建时间" }
        }
      },
      "ActivityItem": {
        "type": "object",
        "properties": {
          "activityId": { "type": "integer", "description": "活动ID" },
          "title": { "type": "string", "description": "活动标题" },
          "description": { "type": "string", "description": "活动描述" },
          "startTime": { "type": "string", "format": "date-time", "description": "开始时间" },
          "endTime": { "type": "string", "format": "date-time", "description": "结束时间" },
          "location": { "type": "string", "description": "活动地点" }
        }
      },
      "RoleItem": {
        "type": "object",
        "properties": {
          "roleId": { "type": "integer", "description": "角色ID" },
          "roleName": { "type": "string", "description": "角色名称" },
          "description": { "type": "string", "description": "角色描述" }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/auth/v1/register": {
      "post": {
        "summary": "用户注册",
        "description": "前台用户注册接口，所有注册用户默认 roleId 为 0（普通学生）。",
        "requestBody": {
          "description": "用户注册信息",
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserRegisterRequest" },
              "example": {
                "userName": "student001",
                "password": "password123",
                "name": "李明",
                "email": "liming@example.com",
                "phone": "13800138000"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "注册成功，返回用户信息（roleId 默认为 0）",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" },
                "example": {
                  "code": 0,
                  "message": "注册成功",
                  "traceid": "reg12345",
                  "data": {
                    "user": {
                      "userId": 101,
                      "userName": "student001",
                      "name": "李明",
                      "roleId": 0
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/v1/login": {
      "post": {
        "summary": "用户登录",
        "description": "前台用户登录接口，返回 JWT Token 与用户基本信息。",
        "requestBody": {
          "description": "用户登录请求参数",
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserLoginRequest" },
              "example": {
                "userName": "student001",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功，返回 Token 与用户信息",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" },
                "example": {
                  "code": 0,
                  "message": "登录成功",
                  "traceid": "login1234",
                  "data": {
                    "token": "jwt.token.here",
                    "user": {
                      "userId": 101,
                      "userName": "student001",
                      "name": "李明",
                      "roleId": 0
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/v1/admin/login": {
      "post": {
        "summary": "终极管理员登录",
        "description": "后台管理系统终极管理员登录接口，要求权限校验更严格。",
        "requestBody": {
          "description": "管理员登录请求参数",
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserLoginRequest" },
              "example": {
                "userName": "admin",
                "password": "adminSecret"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "管理员登录成功，返回 Token 与管理员信息",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" },
                "example": {
                  "code": 0,
                  "message": "登录成功",
                  "traceid": "adminlogin123",
                  "data": {
                    "token": "jwt.admin.token.here",
                    "user": {
                      "userId": 1,
                      "userName": "admin",
                      "name": "超级管理员",
                      "roleId": 1
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/v1/refresh": {
      "post": {
        "summary": "刷新 Token",
        "description": "根据旧 Token 刷新新的 JWT Token。",
        "requestBody": {
          "description": "需要刷新 Token 的旧 Token",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string", "description": "旧 Token" }
                },
                "required": ["token"]
              },
              "example": { "token": "old.jwt.token" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "刷新成功返回新的 Token",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" },
                "example": {
                  "code": 0,
                  "message": "刷新成功",
                  "traceid": "refresh1234",
                  "data": { "token": "new.jwt.token" }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/v1/info": {
      "get": {
        "summary": "获取当前用户信息",
        "description": "返回当前登录用户的详细信息。",
        "security": [ { "bearerAuth": [] } ],
        "responses": {
          "200": {
            "description": "返回用户信息",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" },
                "example": {
                  "code": 0,
                  "message": "success",
                  "traceid": "info1234",
                  "data": {
                    "user": {
                      "userId": 101,
                      "userName": "student001",
                      "name": "李明",
                      "roleId": 0
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/v1/list": {
      "get": {
        "summary": "获取用户列表（后台）",
        "description": "管理员接口：返回所有用户列表，支持分页与搜索。",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          { "name": "page", "in": "query", "description": "当前页码", "schema": { "type": "integer", "default": 1 } },
          { "name": "pageSize", "in": "query", "description": "每页数量", "schema": { "type": "integer", "default": 10 } },
          { "name": "keyword", "in": "query", "description": "搜索关键字", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "返回用户列表及分页数据",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      }
    },
    "/api/user/v1/apply-join": {
      "post": {
        "summary": "提交入会申请",
        "description": "前台接口：已注册用户提交入会申请，等待管理员审核。",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "description": "入会申请信息",
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ApplyJoinRequest" },
              "example": {
                "introduction": "我热爱编程，想加入开发部门。",
                "department": "技术部"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "申请提交成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" },
                "example": {
                  "code": 0,
                  "message": "申请提交成功",
                  "traceid": "apply1234",
                  "data": {}
                }
              }
            }
          }
        }
      }
    },
    "/api/user/v1/{userId}/role": {
      "put": {
        "summary": "分配用户角色",
        "description": "后台管理员接口：为指定用户分配角色（更新 roleId）。",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          { "name": "userId", "in": "path", "required": true, "description": "用户ID", "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "description": "分配的角色信息",
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AssignRoleRequest" },
              "example": { "roleId": 10 }
            }
          }
        },
        "responses": {
          "200": {
            "description": "角色分配成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" },
                "example": {
                  "code": 0,
                  "message": "角色更新成功",
                  "traceid": "roleassign123",
                  "data": {}
                }
              }
            }
          }
        }
      }
    },
    "/api/user/v1/application-list": {
      "get": {
        "summary": "获取入会申请列表",
        "description": "后台管理员接口：返回所有待审核的入会申请列表。",
        "security": [ { "bearerAuth": [] } ],
        "responses": {
          "200": {
            "description": "返回入会申请列表数据",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      }
    },
    "/api/news/v1": {
      "get": {
        "summary": "获取新闻列表",
        "description": "前台接口：返回新闻列表，支持分类与分页查询。",
        "parameters": [
          { "name": "category", "in": "query", "description": "新闻分类", "schema": { "type": "string" } },
          { "name": "page", "in": "query", "description": "当前页码", "schema": { "type": "integer", "default": 1 } },
          { "name": "pageSize", "in": "query", "description": "每页数量", "schema": { "type": "integer", "default": 10 } }
        ],
        "responses": {
          "200": {
            "description": "返回新闻列表数据",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      },
      "post": {
        "summary": "创建新闻（后台）",
        "description": "管理员接口：创建新的新闻条目。",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "description": "新闻信息",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "content": { "type": "string" },
                  "category": { "type": "string" },
                  "coverImage": { "type": "string" }
                },
                "required": ["title", "content", "category"]
              },
              "example": {
                "title": "协会新闻",
                "content": "详细内容支持 Markdown 格式",
                "category": "协会新闻",
                "coverImage": "http://example.com/cover.jpg"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "新闻创建成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      }
    },
    "/api/news/v1/{newsId}": {
      "get": {
        "summary": "获取新闻详情",
        "description": "返回指定新闻的详细内容。",
        "parameters": [
          { "name": "newsId", "in": "path", "required": true, "description": "新闻ID", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "返回新闻详情数据",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      },
      "put": {
        "summary": "更新新闻（后台）",
        "description": "管理员接口：更新指定新闻内容。",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          { "name": "newsId", "in": "path", "required": true, "description": "新闻ID", "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "description": "更新的新闻数据",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "content": { "type": "string" },
                  "category": { "type": "string" },
                  "coverImage": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "删除新闻（后台）",
        "description": "管理员接口：删除指定新闻。",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          { "name": "newsId", "in": "path", "required": true, "description": "新闻ID", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      }
    },
    "/api/activity/v1": {
      "get": {
        "summary": "获取活动列表",
        "description": "返回活动列表，支持分页和状态筛选。",
        "parameters": [
          { "name": "status", "in": "query", "description": "活动状态筛选：0-未开始, 1-进行中, 2-已结束", "schema": { "type": "integer" } },
          { "name": "page", "in": "query", "description": "当前页码", "schema": { "type": "integer", "default": 1 } },
          { "name": "pageSize", "in": "query", "description": "每页数量", "schema": { "type": "integer", "default": 10 } }
        ],
        "responses": {
          "200": {
            "description": "返回活动列表数据",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      },
      "post": {
        "summary": "创建活动（后台）",
        "description": "管理员接口：创建新的活动。",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "description": "活动信息",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "startTime": { "type": "string", "format": "date-time" },
                  "endTime": { "type": "string", "format": "date-time" },
                  "location": { "type": "string" },
                  "maxParticipants": { "type": "integer" },
                  "status": { "type": "integer" }
                },
                "required": ["title", "description", "startTime", "endTime", "location"]
              },
              "example": {
                "title": "编程大赛",
                "description": "年度编程大赛",
                "startTime": "2025-05-01T09:00:00Z",
                "endTime": "2025-05-01T17:00:00Z",
                "location": "学校礼堂",
                "maxParticipants": 100,
                "status": 0
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "活动创建成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      }
    },
    "/api/activity/v1/{activityId}": {
      "get": {
        "summary": "获取活动详情",
        "description": "返回指定活动的详细信息。",
        "parameters": [
          { "name": "activityId", "in": "path", "required": true, "description": "活动ID", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "返回活动详情数据",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      },
      "put": {
        "summary": "更新活动（后台）",
        "description": "管理员接口：更新指定活动信息。",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          { "name": "activityId", "in": "path", "required": true, "description": "活动ID", "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "description": "更新的活动数据",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "startTime": { "type": "string", "format": "date-time" },
                  "endTime": { "type": "string", "format": "date-time" },
                  "location": { "type": "string" },
                  "maxParticipants": { "type": "integer" },
                  "status": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "删除活动（后台）",
        "description": "管理员接口：删除指定活动。",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          { "name": "activityId", "in": "path", "required": true, "description": "活动ID", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          }
        }
      }
    },
    "/api/activity/v1/{activityId}/register": {
      "post": {
        "summary": "活动报名",
        "description": "前台接口：用户报名参加指定活动。",
        "parameters": [
          { "name": "activityId", "in": "path", "required": true, "description": "活动ID", "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "description": "报名信息",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "studentId": { "type": "string" },
                  "contact": { "type": "string" }
                },
                "required": ["name", "studentId", "contact"]
              },
              "example": {
                "name": "王五",
                "studentId": "2025002",
                "contact": "13800138002"
              }
            }
          }
        },
        "responses": {
          "200": {
